{
    "typeAcquisition": {
        "enable": true
    },
    
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true, // Debugging purposes
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true, // Every variable must have assigment
        "noEmitOnError": true, // No file will be generated when error occurs
        "noUnusedParameters": true, // Every parameter has to be used otherwise error occurs
        "jsx": "react",
        "outDir": "wwwroot/dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["@types/webpack-env"], // Typescript compilation 
        "strictNullChecks": true // Another layer of type control (variable with number type cannot hold null)
    },
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}
